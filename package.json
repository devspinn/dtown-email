{
  "name": "dtown-email",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "deploy": "turbo run deploy --filter=@dtown-email/api --filter=@dtown-email/web",
    "db:push": "dotenvx run -- pnpm --filter @dtown-email/db run db:push",
    "db:studio": "dotenvx run -- pnpm --filter @dtown-email/db run db:studio",
    "db:generate": "dotenvx run -- pnpm --filter @dtown-email/db run db:generate"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
